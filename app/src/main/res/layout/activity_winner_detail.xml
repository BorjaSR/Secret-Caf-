<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_discount_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="30">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:transitionName="@string/transitionName_cardBackground"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <es.bsalazar.secretcafe.utils.ImpactTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo del descuento"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/discount_expired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="@string/expired_on"/>

            <RelativeLayout
                android:layout_width="@dimen/qr_code_size"
                android:layout_height="@dimen/qr_code_size"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">


                <ImageView
                    android:id="@+id/qr_discount"
                    android:layout_width="@dimen/qr_code_size"
                    android:layout_height="@dimen/qr_code_size"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/discount_status_image"
                    android:layout_width="@dimen/qr_code_size"
                    android:layout_height="@dimen/qr_code_size"
                    android:src="@drawable/accepted"
                    android:padding="10dp"
                    android:background="@color/alpha_black"
                    android:visibility="visible"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/discount_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:text="15245265-5869-5847-124526536598"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>