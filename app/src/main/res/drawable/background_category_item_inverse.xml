            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle" >
                <solid android:color="@color/colorAlphaAccent"/>
            </shape>
        </rotate>
    </item>
</layer-list>